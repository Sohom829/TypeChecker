{
  "compilerOptions": {
    "target": "ES3",
    "module": "commonjs",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./out",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "pretty": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
